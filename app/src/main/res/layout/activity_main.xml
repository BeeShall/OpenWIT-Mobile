<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beeshall.openwit.MainActivity">

    <Button
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogIn"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:background="#ff007f"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/inputPassword"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-condensed"
        android:textSize="14sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="31dp"
        android:id="@+id/text"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/btnLogIn"
        android:layout_alignStart="@+id/inputPassword" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_alignBaseline="@+id/text"
        android:layout_alignBottom="@+id/text"
        android:layout_alignEnd="@+id/btnLogIn"
        android:textColor="#ff007f" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/inputPassword"
        android:hint="Password"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/inputUserName"
        android:hint="User Name"
        android:singleLine="false"
        android:fontFamily="sans-serif-condensed"
        android:textAlignment="center"
        android:selectAllOnFocus="true"
        android:textAllCaps="false"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/inputPassword"
        android:layout_alignStart="@+id/inputPassword" />

    <ImageView
        app:srcCompat="@mipmap/flower_transpar"
        android:id="@+id/imgLogo"
        android:layout_width = "60dp"
        android:layout_height= "60dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="78dp"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:text="OpenWIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="18dp"
        android:id="@+id/txtLogo"
        android:fontFamily="sans-serif-condensed"
        android:textSize="24sp" />


</RelativeLayout>
